<%- if signed_in? && !admin_scope? -%>
  <%- if current_league -%>
    <li class="dropdown">
      <%= link_to root_path, class: 'dropdown-toggle', data: { toggle: 'dropdown' } do %>
        <%= current_league %> <span class="caret"></span>
      <%- end -%>
      <ul class="dropdown-menu">
        <%- @leagues.each do |league| -%>
          <li class="<%= 'active' if league == current_league %>">
            <%= link_to league, set_league_path(league), method: :post %>
          </li>
        <%- end -%>
      </ul>
    </li>
  <%- end -%>

  <%- if current_team -%>
    <li class="dropdown">
      <%= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do %>
        <%= current_team %> <span class="caret"></span>
      <%- end -%>
      <ul class="dropdown-menu">
        <li><%= link_to 'Edit team', [:edit, current_team] %></li>
      </ul>
    </li>
  <%- end -%>
<%- end -%>