<%- add_breadcrumb 'Forgotten Password?' -%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h1 class="page-header">Forgot your password?</h1>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :email, required: true, autofocus: true %>

      <div class="form-actions clearfix">
        <div class="pull-left">
          <%= f.button :submit, "Send me reset password instructions", class: 'btn-primary', data: { disable_with: 'Please wait...' } %>
        </div>
        <div class="pull-left form-action-links">
          or <%= link_to "sign in", new_session_path(resource_name) %>
        </div>
      </div>
    <% end %>

  </div>
</div>
