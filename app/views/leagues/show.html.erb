<h1>
  <div class="pull-right">
    <div class="btn-group" role="group">
      <%= link_to 'Edit', [:edit, resource], class: 'btn btn-default' %>
      <%= link_to 'Destroy', resource, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <%= resource %>
</h1>

<section>
  <% if resource.managers.empty? %>
    <h4 class="alert alert-warning">
      You've not invited any Managers to this League yet. <%= link_to 'Invite one now', new_league_manager_path(resource) %>
    </h4>
  <% else %>
    <%= link_to 'Invite a Manager...', new_league_manager_path(resource) %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        <%- resource.managers.each do |manager| -%>
          <tr>
            <td><%= manager.user.name || 'n/a' %></td>
            <td><%= manager.user.email %></td>
            <td><%= link_to 'Resend invite', resend_invitation_league_manager_path(resource, manager), method: :post, class: 'btn btn-default btn-xs' %></td>
          </tr>
        <%- end -%>
      </tbody>
    </table>
  <% end %>
</section>
