<%= simple_form_for [:admin, resource] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :auction_on %>
  </div>

  <div class="form-actions clearfix">
    <div class="pull-left">
      <%= f.button :submit, class: 'btn-primary', data: { disable_with: 'Please wait...' } %>
    </div>
    <div class="pull-left form-action-links">
      or <%= link_to "go back", :back %>
    </div>
  </div>
<% end %>
